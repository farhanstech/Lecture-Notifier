<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:background="@drawable/bg"
    tools:context="com.webaculous.pro.lecturenotifier.MainActivity">

    <TextView
        android:id="@+id/title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:textColor="@color/grey"
        android:textStyle="bold"
        android:textSize="30sp"
        android:fontFamily="sans-serif"
        android:text="Create an Account" />

    <EditText
        android:id="@+id/txt_name"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/title"
        android:layout_centerHorizontal="true"
        android:fontFamily="sans-serif"
        android:hint="Enter Name"
        android:textColor="@android:color/white"
        android:textColorHint="@android:color/white"
        android:layout_marginTop="30dp"
        android:ems="10"
        android:inputType="text" />

    <EditText
        android:id="@+id/txt_email"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txt_name"
        android:layout_centerHorizontal="true"
        android:fontFamily="sans-serif"
        android:hint="Enter Email"
        android:textColor="@android:color/white"
        android:textColorHint="@android:color/white"
        android:layout_marginTop="10dp"
        android:ems="10"
        android:inputType="textEmailAddress" />

    <Spinner
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/spin_branch"
        android:textColor="@android:color/white"
        android:layout_centerHorizontal="true"
        style="@style/Widget.AppCompat.Spinner.Underlined"
        android:layout_marginTop="10dp"
        android:layout_below="@+id/txt_email"
        />

    <Spinner
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/spin_sem"
        style="@style/Widget.AppCompat.Spinner.Underlined"
        android:textColor="@android:color/white"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:layout_below="@+id/spin_branch"/>

    <EditText
        android:id="@+id/txt_pass"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/spin_sem"
        android:hint="Enter Password"
        android:textColorHint="@android:color/white"
        android:textColor="@android:color/white"
        android:layout_centerHorizontal="true"
        android:fontFamily="sans-serif"
        android:layout_marginTop="10dp"
        android:ems="10"
        android:inputType="textPassword" />

    <EditText
        android:id="@+id/txt_cpass"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txt_pass"
        android:hint="Confirm Password"
        android:textColorHint="@android:color/white"
        android:textColor="@android:color/white"
        android:layout_centerHorizontal="true"
        android:fontFamily="sans-serif"
        android:layout_marginTop="10dp"
        android:ems="10"
        android:inputType="textPassword" />

    <Button
        android:id="@+id/reg_button"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txt_cpass"
        android:layout_centerHorizontal="true"
        android:fontFamily="sans-serif"
        android:layout_marginTop="20dp"
        android:textColor="@android:color/white"
        android:background="@drawable/button"
        android:text="Register"
        android:onClick="userReg"/>

    <TextView
        android:id="@+id/title2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="sans-serif"
        android:textColor="@android:color/white"
        android:text="Already Have an Account. Login Now"
        android:layout_alignParentBottom="true"
        android:onClick="userLogin"
        android:layout_centerHorizontal="true" />


</RelativeLayout>
